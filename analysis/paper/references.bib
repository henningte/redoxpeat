@article{Uchimiya.2009,
  author =        {Uchimiya, Minori and Stone, Alan T.},
  journal =       {{Chemosphere}},
  number =        {4},
  pages =         {451--458},
  title =         {{Reversible redox chemistry of quinones: impact on
                   biogeochemical cycles}},
  volume =        {77},
  year =          {2009},
  abstract =      {The role of quinone biomolecules and quinone moieties
